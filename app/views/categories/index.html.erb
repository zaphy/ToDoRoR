<h1>Categories</h1>

  <ul class="sortable list" id="categories">
    <% @categories.each do |category| %>
      <li class="ui-state-default decimal_li" id="category_<%= category.id %>">
      	<a data-toggle="collapse" href="#collapse_<%= category.id %>">
          <%= category.name %>
        </a>
        <div class="btn-group pull-right">
          <%= link_to edit_category_path(category), {:class => "btn btn-mini", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} do %><i class="icon-edit"></i><% end %>
          <%= link_to category, :remote => true, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini" do %><i class="icon-remove"></i><% end %>
        </div>
        <div class="pull-right" style="margin-right:5px"><%= category.tasks.count %></div>
      	<div id="collapse_<%= category.id %>"  class="mainbody panel-collapse collapse">
          <ul class="list-unstyled">
            <% category.tasks.each do |task| %>
              <li class="licsss"><%= link_to task.short_text, task %></li>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
  </br>

  <center><%= link_to 'New Category', new_category_path, {:class => "btn btn-primary", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></center>