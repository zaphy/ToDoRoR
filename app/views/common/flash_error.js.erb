<% flash.each do |key, value| %>
  <% close_button = "<button type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-hidden=\"true\">&times;</button>" %>
  $("#flash_content").append("<%= escape_javascript("<div class=\"alert alert-dismissable alert-#{key}\">#{close_button}#{value}</div>".html_safe) %>");
<% end %>
